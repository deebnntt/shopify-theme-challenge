body {
  margin: 0;
  min-height: 100%;
  font-family: "Helvetica Neue", Arial, sans-serif;
}

div {
   padding: 5px 10px 5px 10px;
}

h1 {
  font-style: italic;
}

.navbar {
  display: inline;
}

.navbar h1 {
  display: inline;
}

.cart-count {
  float: right
}

a {
  color: #787878;
  text-decoration: none;
}

a:hover {
  color: black;
}

ul {
  display:inline;
  list-style-type: none;
}

li {
  display: inline;
  float: right;
  padding: 10px;
}

.collection {
}

.footer {
  color: #787878;
  text-align: center;
}

@media only screen and (max-device-width : 500px) {
  img {
    width: 90%;
  }
  .navbar h1 {
    display: block;
  }
  li {
    font-size: 12px;
  }
}
